<div class="cart">
    <h1>Your Shopping Cart</h1>

    {{#if cartItems.length}}
      <div class="cart-items">
        {{#each cartItems}}
          <div class="cart-item">
            <div class="item-details">
              <h2>{{this.design}}</h2>
              <p>Size: {{this.size}}</p>
              <p>Price: ${{this.price}}</p>
              <p>Quantity: {{this.quantity}}</p>
              <input type="hidden" id="cartitem_id" value={{this.id}} />
              <button class="button is-danger is-dark type="button" class="remove-btn" data-id="{{this.id}}">Delete</button>
            </div>
          </div>
        {{/each}}
      </div>

      <div class="cart-summary">
        <p>Subtotal: ${{subtotal}}</p>
        <h3>Total: ${{total}}</h3>
        <form class="checkoutForm">
        <button  class="button is-info is-light" type="button"><a href="/checkout/{{total}}">Checkout</a></button>
        
    </form>
      </div>
    {{else}}
      <div class="empty-cart">
        <p>Your cart is empty<a href="/">Continue Shopping</a></p>
      </div>
    {{/if}}
</div>

  <script src="/js/delFromCart.js"></script>

