{{!-- HTML for the login view --}}
<div>
    <h3 class="title is-2">Login</h3>
</div>
<div class="columns mt-6">
    <div class="column is-one-quarter"> 
        <img src="/images/dollasign.webp" alt="dxf dollar sign logo" style="width: 75%;">
    </div>
    <div style="width: 36rem;">
        <h5 class="title is-5 mt-4 mb-2">Enter your account info:</h5>
        <div>
            <form class="login-form">
                <div>
                    <label for="email-login">Email: </label>
                    <input type="text" id="email-login" name="username" class="input mb-2" />
                </div>
                <div>
                    <label for="password-login">Password: </label>
                    <input type="password" id="password-login" name="password" class="input mb-2" />
                </div>
                <div>
                    <button type="submit" class="button mt-5">Login!</button>
                    <br>
                    <a href="/signup"><button type="button" id="instead" class="mt-2">Sign up instead</button></a>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="/js/login.js"></script>